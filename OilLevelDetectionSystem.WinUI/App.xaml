<Application
    x:Class="OilLevelDetectionSystem.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OilLevelDetectionSystem.WinUI"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->

            <x:String x:Key="AppName">Oil level “supervisor”—— oil-immersed power transformer oil level gas detection system</x:String>

            <Color x:Key="BorderColor">#7198e5</Color>
            <Color x:Key="BackgroundColor">#061651</Color>
            <Color x:Key="ComponentBackgroundColor">#082067</Color>
            <Color x:Key="ForegroundColor">#68c8e5</Color>

            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
            <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>

            <Thickness x:Key="BorderThickness">2</Thickness>
            <CornerRadius x:Key="CornerRadius">5</CornerRadius>

            <Style TargetType="TextBlock">
                <Style.Setters>
                    <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                </Style.Setters>
            </Style>

            <Style TargetType="MenuBar">
                <Style.Setters>
                    <Setter Property="Foreground"  Value="{StaticResource ForegroundBrush}"/>
                </Style.Setters>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
